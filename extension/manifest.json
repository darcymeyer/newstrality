{
  "manifest_version": 2,
  "name": "Newstrality",
  "version": "0.1",
  "description": "Using cutting-edge artificial intelligence to detect the politicial leanings of news articles. Read smart.",
  "icons": {
    "48": "icons/logo.svg"
  },
  "applications": {
    "gecko": {
      "id": "libre@rmrm.io"
    }
  },
  "browser_action": {
    "default_icon": "icons/logo.svg",
    "default_title": "Newstrality",
    "default_popup": "popup/default.html"
  },
  "permissions": [
    "https://api.newstrality.org",
    "webRequest"
  ]
}
